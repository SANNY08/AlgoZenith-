#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int t=1;
    int jump=n-1;
    for(int i=0;i<n;i++)
    {
      for(int j=0;j<jump;j++)
      {
        cout<<" ";
      }
      for(int j=0;j<t;j++)
      {
        cout<<"*";
      }
      cout<<"\n";
      jump -=1;
      t +=2;
    }
}
